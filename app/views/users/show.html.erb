<div class="profile-box">
  <div class="image-profile">
    <%= image_tag @user.photo, alt: 'User Photo' if @user.photo.present? %>
  </div>
  <div class="box">
    <h2><%= @user.name %></h2>
    <p>
      <%= link_to "Post Counter:", user_posts_path(@user) %><%= @user.post_counter %>
    </p>
  </div>
</div>

<div class="bio">
  <%= @user.bio %>
</div>

<ul class="post-ul">
  <% @user.recent_posts(3).each do |post| %>
    <li class="post-li">
      <div class="post-details">
        <p class="counter">Post Number: <%= post.id %></p>
        <strong>Title:</strong> <%= link_to post.title, user_post_path(@user, post) %><br>    
        <strong>Text:</strong> <%= post.text %>
      </div>
    </li>
  <% end %>
</ul>
